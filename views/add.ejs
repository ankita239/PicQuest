<% include ./partials/header.ejs %>

<div class="w-full h-screen  px-10 py-5 ">
  <h1 class="font-bold text-2xl">Create a New Post</h1>
  <hr class="my-2 border-2 border-slate-800">
  <form action="/createpost" method="post" enctype="multipart/form-data">
     <input class="block w-1/3 my-5" type="file" name="postImage">
     <input name="title" class="block w-1/3 my-5 border-2 py-2 px-3 rounded-xl" type="text" placeholder="Enter Title">
     <textarea name="description" class="block h-32 w-1/3 my-5 border-2 py-4 px-3 rounded-xl" type="text" placeholder="Enter Description"></textarea>
     <input class=" w-1/3 my-5 bg-[#E70820] hover:bg-[#bc0111] px-7 text-white py-3 hover:cursor-pointer font-semibold rounded-full" type="submit" value="Create Post">
  </form>
</div>


